{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "ES5",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@types/*": ["src/types/*"],
      "@states/*": ["src/states/*"],
      "@pages/*": ["src/pages/*"],
      "@global/*": ["src/global/*"],
    },
    "types": ["jest", "node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "./tests/cypress",
    "./cypress.config.ts",
  ]
}