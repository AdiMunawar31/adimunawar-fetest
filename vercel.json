{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "functions": {
    "api": {
      "src": "api/**/*.@(js|ts)",
      "includeFiles": ["api/**/*.@(js|ts)"]
    }
  }
}
